<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<%= link_to "New user", new_user_path %>

<div id="users">
  <%= form_with url: updateall_users_path do |f| %>
    <% @users.each do |user| %>
      <%= f.fields_for 'users[]', user do |ff| %>
        <%= render 'user_role', ff: ff %>
      <% end %>
    <% end %>
    <%= f.submit :updateall %>
  <% end %>
</div>

